d /efi/boot

if arch eq 'x86_64'
  grub2-x86_64-efi:
    m usr/lib64/efi/grubcd.efi efi/boot/bootx64.efi

  # if we have shim, use it
  if exists(shim-signed) || exists(shim)
      e mv efi/boot/bootx64.efi efi/boot/grub.efi
    ?shim:
      m /usr/lib64/efi/shim.efi efi/boot/bootx64.efi
    ?shim-signed:
      m /usr/lib64/efi/shim.efi efi/boot/bootx64.efi
  endif

# elsif arch eq 'ia64'

endif

