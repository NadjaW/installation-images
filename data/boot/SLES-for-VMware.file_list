if arch eq 'i386' || arch eq 'x86_64'

  d loader

  x mk_splash .

  gfxboot-branding-SLES-for-VMware:
    /
    e cp -a etc/bootsplash/themes/SLES-for-VMware/cdrom/* loader
    # e gfxboot --config-file=loader/gfxboot.cfg --change-config install::dud.url=http://download.opensuse.org/update/11.1/driverupdate

  # mk_splash dst_dir theme config spl_name
  e ./mk_splash loader SLES-for-VMware   800x600 08000600
  e ./mk_splash loader SLES-for-VMware  1024x600 10240600
  e ./mk_splash loader SLES-for-VMware  1024x768 10240768
  e ./mk_splash loader SLES-for-VMware  1280x800 12800800
  e ./mk_splash loader SLES-for-VMware 1280x1024 12801024
  e ./mk_splash loader SLES-for-VMware 1400x1050 14001050
  e ./mk_splash loader SLES-for-VMware 1680x1050 16801050
  e ./mk_splash loader SLES-for-VMware 1600x1200 16001200
  e ./mk_splash loader SLES-for-VMware 1920x1200 19201200

  r mk_splash etc var

  x message loader
  R s/product_name/<product_name>/ loader/message

endif
