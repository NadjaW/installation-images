#! /bin/sh

debug=

PATH=$PATH:/S.u.S.E./bin:S.u.S.E./usr/bin
cd /

[ "$debug" ] && echo $LINENO && /bin/bash

if [ ! -d /S.u.S.E./etc ] ; then
  # mount Live CD
  mount -n /S.u.S.E.
fi

if [ -f /etc/install.inf ]; then
  eval `grep ': ' /etc/install.inf | sed -e 's/:  */="/' -e 's/$/"/' -e 's/^/export /'`
fi

if [ -f /etc/SuSElive ] ; then
  . /etc/SuSElive
else
  exit 1
fi

[ "$debug" ] && echo $LINENO && /bin/bash

if [ "$part" -a "$suseimg" ]; then
  i=
  [ "$dosdrive" ] && i="$dosdrive, "
  echo
  echo "Zapisuji informace do $suseimg na $part ($i$fstype, $partsize MB)"

  mount -n $part /mnt || error=21

  if [ "$error" = "" -a "$suseimg" ] ; then
    if [ -f /etc/.SuSEfiles ] ; then
      mount -n -oremount,rw /
      rm -f /etc/.SuSErmlist
      for i in `cat /etc/.SuSEfiles` ; do
        if [ ! -e "$i" -a ! -L "$i" ] ; then
          echo "$i" >>/etc/.SuSErmlist
        fi
      done
      mount -n -oremount,ro /
    fi
    tar --exclude /dev/console -zclf /mnt/$suseimg / 2>/dev/null || error=1
  fi

  if [ ! -f /mnt/suselive.txt ] ; then
    echo -e "$suseimg obsahuje data va¹eho SuSE Linux 8.0 Evaluation CD.\r" >/mnt/suselive.txt
    echo -e "suselive.swp (existuje-li) je odkládací soubor.\r" >>/mnt/suselive.txt
    echo -e "suselive.usr (existuje-li) je souborový systém ext2 s domovským adresáøem u¾ivatele.\r" >>/mnt/suselive.txt
  fi

  if [ "$error" ] ; then
    echo "Nastala chyba pøi zapisování $suseimg."
    echo "Lituji, ale va¹e zmìny se asi ztratily. :-("
  fi

  umount -n /mnt
fi

[ "$debug" ] && echo $LINENO && /bin/bash

umount -n /S.u.S.E.
# umount Live CD

[ "$debug" ] && echo $LINENO && /bin/bash

exit 0
