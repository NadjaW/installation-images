EndSection

Section "InputDevice"
  Driver	"mouse"
  Identifier	"Mouse[1]"
  Option	"Device"	"/dev/mouse"
  Option	"Protocol"	"Microsoft"
EndSection

Section "Monitor"
  HorizSync	25-40	
  Identifier	"Monitor[0]"
